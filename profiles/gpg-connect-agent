abi <abi/3.0>,

include <tunables/global>

@{exec_path} = /{usr/,}bin/gpg-connect-agent
profile gpg-connect-agent @{exec_path} {
  include <abstractions/base>
  include <abstractions/consoles>

  @{exec_path} mr,

  /etc/inputrc r,

  include if exists <local/gpg-connect-agent>
}
