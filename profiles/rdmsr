abi <abi/3.0>,

include <tunables/global>

@{exec_path}  = /{usr/,}sbin/rdmsr
profile rdmsr @{exec_path} {
  include <abstractions/base>

  # To access /dev/cpu/*/msr .
  capability sys_rawio,

  @{exec_path} mr,

  owner /dev/cpu/[0-9]*/msr r,

  include if exists <local/rdmsr>
}
