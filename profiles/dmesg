abi <abi/3.0>,

include <tunables/global>

@{exec_path} = /{usr/,}bin/dmesg
profile dmesg @{exec_path} {
  include <abstractions/base>

  capability syslog,

  @{exec_path} mr,

  /dev/kmsg r,

  include if exists <local/dmesg>
}
