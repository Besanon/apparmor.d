{{- define "profile" -}}

    {{- "profile" -}}
    {{- with .Name -}}
        {{ " " }}{{ . }}
    {{- end -}}
    {{- with .Attachments -}}
        {{ " " }}{{ join . }}
    {{- end -}}
    {{- with .Attributes -}}
        {{ " xattrs=(" }}{{ join . }}{{ ")" }}
    {{- end -}}
    {{- with .Flags -}}
        {{ " flags=(" }}{{ join . }}{{ ")" }}
    {{- end -}}

    {{- " {\n" -}}
    {{- setindent "++" -}}
    {{- template "rules" .Rules -}}
    {{- setindent "--" -}}
    {{- indent "}" -}}

{{- end -}}
