{{- define "mount" -}}
    {{- template "qualifier" . -}}
    {{- "mount" -}}
    {{- with .FsType -}}
        {{ " fstype=" }}{{ . }}
    {{- end -}}
    {{- with .Options -}}
        {{ " options=" }}{{ cjoin . }}
    {{- end -}}
    {{- with .Source -}}
        {{ " " }}{{ . }}
    {{- end -}}
    {{- with .MountPoint -}}
        {{ " -> " }}{{ . }}
    {{- end -}}
    {{- "," -}}
    {{- template "comment" . -}}
{{- end -}}

