{{- define "unix" -}}
    {{- template "qualifier" . -}}
    {{- "unix" -}}
    {{- with .Access -}}
        {{ " (" }}{{ . }}{{ ")" }}
    {{- end -}}
    {{- with .Type -}}
        {{ " type=" }}{{ . }}
    {{- end -}}
    {{- with .Protocol -}}
        {{ " protocol=" }}{{ . }}
    {{- end -}}
    {{- with .Address -}}
        {{ " addr=" }}{{ . }}
    {{- end -}}
    {{- with .Label -}}
        {{ " label=" }}{{ . }}
    {{- end -}}
    {{- if and .PeerLabel .PeerAddr -}}
        {{ " peer=(label=" }}{{ .PeerLabel }}{{ ", addr="}}{{ .PeerAddr }}{{ ")" }}
    {{- else -}}
        {{- with .PeerLabel -}}
            {{ overindent "peer=(label=" }}{{ . }}{{ ")" }}
        {{- end -}}
        {{- with .PeerAddr -}}
            {{ overindent "peer=(addr=" }}{{ . }}{{ ")" }}
        {{- end -}}
    {{- end -}}
    {{- "," -}}
    {{- template "comment" . -}}
{{- end -}}