{{- define "pivot_root" -}}
    {{- template "qualifier" . -}}
    {{- "pivot_root" -}}
    {{- with .OldRoot -}}
        {{ " oldroot=" }}{{ . }}
    {{- end -}}
    {{- with .NewRoot -}}
        {{ " " }}{{ . }}
    {{- end -}}
    {{- with .TargetProfile -}}
        {{ " -> " }}{{ . }}
    {{- end -}}
    {{- "," -}}
    {{- template "comment" . -}}
{{- end -}}