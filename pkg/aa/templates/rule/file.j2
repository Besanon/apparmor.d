{{- define "file" -}}
    {{- template "qualifier" . -}}
    {{- if .Owner -}}
        {{- "owner " -}}
    {{- end -}}
    {{- .Padding 2 -}}
    {{- .Path -}}
    {{- " " -}}
    {{- .Padding 3 -}}
    {{- range .Access -}}
        {{- . -}}
    {{- end -}}
    {{- with .Target -}}
        {{ " -> " }}{{ . }}
    {{- end -}}
    {{- "," -}}
    {{- .Padding 4 -}}
    {{- template "comment" . -}}
{{- end -}}

{{- define "link" -}}
    {{- template "qualifier" . -}}
    {{- if .Owner -}}
        {{- "owner " -}}
    {{- end -}}
    {{- .Padding 2 -}}
    {{- "link " -}}
    {{- if .Subset -}}
        {{- "subset " -}}
    {{- end -}}
    {{- .Padding 3 -}}
    {{- .Path -}}
    {{- " " -}}
    {{- with .Target -}}
        {{ "-> " }}{{ . }}
    {{- end -}}
    {{- "," -}}
    {{- .Padding 4 -}}
    {{- template "comment" . -}}
{{- end -}}
