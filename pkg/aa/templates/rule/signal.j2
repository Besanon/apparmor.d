{{- define "signal" -}}
    {{- template "qualifier" . -}}
    {{- "signal" -}}
    {{- with .Access -}}
        {{ " " }}{{ cjoin . }}
    {{- end -}}
    {{- with .Set -}}
        {{ " set=" }}{{ cjoin . }}
    {{- end -}}
    {{- with .Peer -}}
        {{ " peer=" }}{{ . }}
    {{- end -}}
    {{- "," -}}
    {{- template "comment" . -}}
{{- end -}}