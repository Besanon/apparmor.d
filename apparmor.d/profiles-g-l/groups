abi <abi/3.0>,

include <tunables/global>

@{exec_path} = /{usr/,}bin/groups
profile groups @{exec_path} {
  include <abstractions/base>
  include <abstractions/consoles>

  @{exec_path} mr,

  /etc/group r,
  /etc/nsswitch.conf r,

  /dev/tty[0-9]* rw,

  include if exists <local/groups>
}
