#abi <abi/3.0>,

#include <tunables/global>

@{exec_path} = /{usr/,}bin/dpkg-vendor
profile dpkg-vendor @{exec_path} {
  #include <abstractions/base>
  #include <abstractions/perl>

  @{exec_path} r,
  /usr/bin/perl r,

  /etc/dpkg/origins/* r,

  #include if exists <local/dpkg-vendor>
}
