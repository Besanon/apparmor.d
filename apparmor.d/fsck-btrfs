#abi <abi/3.0>,

#include <tunables/global>

@{exec_path} = /{usr/,}sbin/fsck.btrfs
profile fsck-btrfs @{exec_path} {
  #include <abstractions/base>

  @{exec_path} r,

  /{usr/,}bin/dash rix,

  /etc/fstab r,

  #include if exists <local/fsck-btrfs>
}
