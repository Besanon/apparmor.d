abi <abi/3.0>,

include <tunables/global>

@{exec_path} = /{usr/,}bin/systemd-inhibit
profile systemd-inhibit @{exec_path} flags=(attach_disconnected) {
  include <abstractions/base>

  capability net_admin,

  @{exec_path} mr,

  /{usr/,}bin/cat rix,

  include if exists <local/systemd-inhibit>
}
