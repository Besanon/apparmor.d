abi <abi/3.0>,

include <tunables/global>

@{exec_path} = /{usr/,}bin/hostnamectl
profile hostnamectl @{exec_path} {
  include <abstractions/base>

  @{exec_path} mr,

  /etc/machine-id r,

  include if exists <local/hostnamectl>
}