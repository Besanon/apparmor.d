abi <abi/3.0>,

include <tunables/global>

@{exec_path} = /{usr/,}bin/systemd-hwdb
profile systemd-hwdb @{exec_path} {
  include <abstractions/base>

  @{exec_path} mr,

  owner @{PROC}/@{pid}/stat r,

  include if exists <local/systemd-hwdb>
}
