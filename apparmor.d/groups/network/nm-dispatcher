abi <abi/3.0>,

include <tunables/global>

@{exec_path} = /{usr/,}lib/nm-dispatcher
profile nm-dispatcher @{exec_path} {
  include <abstractions/base>

  capability sys_nice,

  @{exec_path} mr,

  /etc/NetworkManager/dispatcher.d/{,**} r,

  include if exists <local/nm-dispatcher>
}
