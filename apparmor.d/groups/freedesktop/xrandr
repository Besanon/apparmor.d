abi <abi/3.0>,

include <tunables/global>

@{exec_path} = @{bin}/xrandr
profile xrandr @{exec_path} {
  include <abstractions/base>

  @{exec_path} mr,

  owner @{HOME}/.Xauthority r,

  /usr/share/X11/XErrorDB r,

  # file_inherit
  owner /dev/tty[0-9]* rw,

  include if exists <local/xrandr>
}
