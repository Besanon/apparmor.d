abi <abi/3.0>,

include <tunables/global>

@{exec_path} = /{usr/,}bin/dirmngr
profile dirmngr @{exec_path} {
  include <abstractions/base>
  include <abstractions/nameservice-strict>
  include <abstractions/ssl_certs>

  network inet dgram,
  network inet6 dgram,
  network inet stream,
  network inet6 stream,

  @{exec_path} mr,

  owner @{HOME}/.gnupg/ rw,
  owner @{HOME}/.gnupg/dirmngr.conf r,
  owner @{HOME}/.gnupg/dirmngr_ldapservers.conf r,
  owner @{HOME}/.gnupg/crls.d/ rw,
  owner @{HOME}/.gnupg/crls.d/DIR.txt rw,

  /usr/share/gnupg/sks-keyservers.netCA.pem r,

  owner @{run}/user/[0-9]*/gnupg/ rw,
  owner @{run}/user/[0-9]*/gnupg/S.dirmngr rw,

  owner @{PROC}/@{pid}/task/@{tid}/comm rw,

  include if exists <local/dirmngr>
}
