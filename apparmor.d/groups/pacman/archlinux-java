abi <abi/3.0>,

include <tunables/global>

@{exec_path} = /{usr/,}bin/archlinux-java
profile archlinux-java @{exec_path} {
  include <abstractions/base>

  @{exec_path} mr,

  /{usr/,}bin/basename  rix,
  /{usr/,}bin/bash      rix,
  /{usr/,}bin/dirname   rix,
  /{usr/,}bin/ln        rix,
  /{usr/,}bin/readlink  rix,
  /{usr/,}bin/unlink    rix,

  include if exists <local/archlinux-java>
}