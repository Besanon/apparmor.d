abi <abi/3.0>,

include <tunables/global>

@{exec_path} = /etc/cron.{hourly,daily,weekly,monthly}/apport
profile cron-apport @{exec_path} {
  include <abstractions/base>

  @{exec_path} r,

  /{usr/,}bin/{,ba,da}sh            rix,
  /{usr/,}bin/find                  rix,

  / r,
  /var/crash/ r,

  include if exists <local/cron-apport>
}
