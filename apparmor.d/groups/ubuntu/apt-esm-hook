abi <abi/3.0>,

include <tunables/global>

@{exec_path} = /{usr/,}lib/ubuntu-advantage/apt-esm-hook
profile apt-esm-hook @{exec_path} {
  include <abstractions/base>
  include <abstractions/apt-common>

  @{exec_path} mr,

  /{usr/,}bin/dpkg  rPx,

  owner @{PROC}/@{pid}/fd/ r,

  include if exists <local/apt-esm-hook>
}