abi <abi/3.0>,

include <tunables/global>

@{exec_path} = /{usr/,}bin/obex-folder-listing
profile obex-folder-listing @{exec_path} {
  include <abstractions/base>

  @{exec_path} mr,

  owner @{HOME}/ r,
  owner @{HOME}/**/ r,
  owner @{MOUNTS}/*/ r,
  owner @{MOUNTS}/*/**/ r,

  include if exists <local/obex-folder-listing>
}
