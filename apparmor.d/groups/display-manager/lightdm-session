abi <abi/4.0>,

include <tunables/global>

@{exec_path} = @{bin}/lightdm-session
profile lightdm-session @{exec_path} {
  include <abstractions/base>

  @{exec_path} mr,

  @{bin}/im-launch rPx,

  @{sh_path} rix,
  @{bin}/mktemp rix,
  @{bin}/expr rix,

  include if exists <local/lightdm-session>
}

# vim:syntax=apparmor
