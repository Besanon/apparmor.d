#abi <abi/3.0>,

#include <tunables/global>

@{exec_path} = /{usr/,}bin/dpkg-divert
profile dpkg-divert @{exec_path} {
  #include <abstractions/base>
  #include <abstractions/consoles>

  @{exec_path} mr,

  /var/lib/dpkg/** r,

  /usr/share/*/**.dpkg-divert.tmp w,

  #include if exists <local/dpkg-divert>
}
