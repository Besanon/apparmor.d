#abi <abi/3.0>,

#include <tunables/global>

@{exec_path} = /{usr/,}bin/tftp
profile tftp @{exec_path} {
  #include <abstractions/base>
  #include <abstractions/nameservice>
  #include <abstractions/user-download-strict>

  @{exec_path} mr,

  #include if exists <local/tftp>
}
