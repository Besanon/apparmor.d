abi <abi/3.0>,

include <tunables/global>

@{exec_path} = /{usr/,}bin/mono-sgen
profile mono-sgen @{exec_path} {
  include <abstractions/base>
  include <abstractions/ssl_certs>

  @{exec_path} mr,

  /usr/share/.mono/{,**} rw,

  /etc/mono/{,**} r,

  include if exists <local/mono-sgen>
}