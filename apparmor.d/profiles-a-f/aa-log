abi <abi/3.0>,

include <tunables/global>

@{exec_path} = /{usr/,}bin/aa-log
profile aa-log @{exec_path} {
  include <abstractions/base>

  @{exec_path} mr,

  /var/log/audit/* r,

  @{sys}/kernel/mm/transparent_hugepage/hpage_pmd_size r,

  include if exists <local/aa-log>
}