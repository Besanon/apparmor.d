abi <abi/3.0>,

include <tunables/global>

@{exec_path} = /{usr/,}{local/,}{s,}bin/zfs
profile zfs @{exec_path} flags=(complain) {
  include <abstractions/base>
  
  capability sys_admin,
  
  @{exec_path} r,
  
  @{PROC}/@{pids}/mounts r,

  /dev/zfs rw,

  include if exists <local/zfs>
}
