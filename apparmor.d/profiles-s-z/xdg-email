abi <abi/3.0>,

include <tunables/global>

@{exec_path} = /{usr/,}bin/xdg-email
profile xdg-email @{exec_path} flags=(complain) {
  include <abstractions/base>

  @{exec_path}  r,
  /{usr/,}bin/{,ba,da}sh rix,
  /{usr/,}bin/sed        rix,

  owner /dev/tty[0-9]* rw,

  include if exists <local/xdg-email>
}
