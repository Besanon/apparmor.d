#abi <abi/3.0>,

#include <tunables/global>

@{exec_path} = /{usr/,}bin/uname
profile uname @{exec_path} {
  #include <abstractions/base>
  #include <abstractions/consoles>

  @{exec_path} mr,

  # file_inherit
  owner @{HOME}/.xsession-errors w,

  #include if exists <local/uname>
}
