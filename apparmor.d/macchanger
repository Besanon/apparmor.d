#abi <abi/3.0>,

#include <tunables/global>

@{exec_path} = /{usr/,}bin/macchanger
profile macchanger @{exec_path} {
  #include <abstractions/base>

  capability net_admin,

  @{exec_path} mr,

  /usr/share/macchanger/*.list r,

  /dev/hwrng r,

  #include if exists <local/macchanger>
}
