#abi <abi/3.0>,

#include <tunables/global>

@{exec_path} = /{usr/,}bin/wavemon
profile wavemon @{exec_path} {
  #include <abstractions/base>

  # To scan WiFi networks
  capability net_admin,

  @{exec_path} mr,

  owner @{HOME}/.wavemonrc rw,

  /etc/nsswitch.conf r,

  @{PROC}/@{pid}/net/dev r,

  #include if exists <local/wavemon>
}
