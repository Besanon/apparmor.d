#abi <abi/3.0>,

#include <tunables/global>

@{exec_path} = /{usr/,}sbin/biosdecode
profile biosdecode @{exec_path} {
  #include <abstractions/base>

  # Needed to read the /dev/mem device
  capability sys_rawio,

  @{exec_path} mr,

  /dev/mem r,

  #include if exists <local/biosdecode>
}
