#abi <abi/3.0>,

#include <tunables/global>

@{exec_path} = /{usr/,}bin/gsmartcontrol-root
profile gsmartcontrol-root @{exec_path} {
  #include <abstractions/base>
  #include <abstractions/consoles>

  @{exec_path} r,
  /{usr/,}bin/bash rix,

  /{usr/,}bin/which rix,

  /{usr/,}bin/pkexec rPx,

  #include if exists <local/gsmartcontrol-root>
}
