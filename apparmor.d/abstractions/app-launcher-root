  abi <abi/3.0>,

  # Root app location
  @{bin}/                       r,
  @{bin}/[a-z0-9]*              rPUx,
  /                             r,
  /usr/                         r,
  /usr/local/{s,}bin/           r,
  /usr/local/{s,}bin/[a-z0-9]*  rPUx,

  include if exists <abstractions/app-launcher-root.d>