  dbus send bus=system path=/org/freedesktop/systemd1
       interface=org.freedesktop.DBus.Properties
       member={Get,GetAll}
       peer=(name=org.freedesktop.systemd1, label="@{systemd}"),

  include if exists <abstractions/bus/systemd.d>
