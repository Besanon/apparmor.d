#abi <abi/3.0>,

#include <tunables/global>

@{exec_path} = /{usr/,}bin/wmctrl
profile wmctrl @{exec_path} {
  #include <abstractions/base>
  #include <abstractions/deny-root-dir-access>

  @{exec_path} mr,

  owner @{HOME}/.Xauthority r,

  #include if exists <local/wmctrl>
}
